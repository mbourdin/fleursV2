{% extends 'admin/dashboard.html.twig' %}
{% block title %}<title>Edit Service</title>{% endblock %}

{% block body %}
    <h1>Edit Service</h1>

    {{ include('service/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('service_index') }}">back to list</a>


        <div>
            <label for="products">Choisir les produits</label>
            <select id="products">
                <option value=""></option>
                {% for product in products %}
                    <option value={{ product.id }}>{{ product.name }}</option>
                {% endfor %}
            </select>
            <button onclick="add({{ service.id }})">associer</button>
            <button onclick="remove({{ service.id }})">dissocier</button>
            <label for="productNumber">nombre</label><input type="number" id="productNumber">
        </div>
        <span>liste des produits associes</span>
        <ul id="productList">
            {% for content in service.products %}
                <li id="productId{{ content.product.id }}">{{ content.quantity ~" "~ content.product.name }}</li>
            {% endfor %}
        </ul>

    <br>

{% endblock %}
    {% block javascripts %}
        <script src="{{ asset('web/js/service.js') }}"></script>
        {{ parent() }}
    {% endblock %}
