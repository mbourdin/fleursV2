<div class="container">
    <div class="row">
        {%  for offer in offers %}
            <div class="card" style="width: 16rem;">
                <div class="container text-center">
                    {% for content in offer.products %}
                        <div class="row">
                            <div class="offerPadding">{{ content.quantity }}</div>
                            <img src="{{ asset('images/products/'~ content.product.photopath) }}" class="rounded mx-auto d-block" alt="..." width="150" height="150">
                        </div>
                    {% endfor %}
                </div>
                <div class="card-body">
                    <h3 class="card-title text-center">{{  offer.name }}</h3>
                    <p class="card-text text-center">{{ "-"~ offer.discount ~ "% : "~offer.price/100.0~"€" }}</p>

                    <div class="row justify-content-center">
                        <div class="col-4">
                            <a href="/offer/read/{{ offer.id }}" class="btn btn-success">détail</a>
                        </div>
                        <div class="col-4">
                            <a href="/panier/addOffer/{{ offer.id }}" class="btn btn-warning">Ajout</a>
                        </div>

                    </div>
                </div>
                <div class="text-center">{{ offer.description }}</div>
            </div>

        {% endfor%}
    </div>



</div>