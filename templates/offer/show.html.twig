{% extends 'base.html.twig' %}

{% block title %}Offer{% endblock %}

{% block body %}
    <h1>Offer</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ offer.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ offer.name }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ offer.price }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ offer.description }}</td>
        </tr>
        <tr>
            <th>Active</th>
            <td>{{ offer.active ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Start</th>
            <td>{{ offer.start ? offer.start|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>End</th>
            <td>{{ offer.end ? offer.end|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Discount</th>
            <td>{{ offer.discount }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('offer_index') }}">back to list</a>

    <a href="{{ path('offer_edit', {'id': offer.id}) }}">edit</a>

    {{ include('offer/_delete_form.html.twig') }}
{% endblock %}