{% extends 'base.html.twig' %}

{% block title %}Offer{% endblock %}

{% block body %}
    <h1>Offer</h1>

    <table class="table table-bordered bg-gray w-auto">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ offer.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ offer.name }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ offer.price/100.0~"€" }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ offer.description }}</td>
        </tr>
        <tr>
            <th>Active</th>
            <td>{{ offer.active ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Start</th>
            <td>{{ offer.start ? offer.start|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>End</th>
            <td>{{ offer.end ? offer.end|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Reduction</th>
            <td>{{ offer.discount~"%" }}</td>
        </tr>
        </tbody>
    </table>
    <h1>Détail des Offres</h1>
    <table class="table table-bordered w-auto bg-gray">
        <th>id</th>
        <th>nom</th>
        <th>photo</th>
        <th>quantité</th>
        <th> </th>
        {% for content in offer.products %}
            <tr>
                <td>
                    {{ content.product.id }}
                </td>
                <td>
                    {{ content.product.name }}
                </td>
                <td>
                    <img class="logo" src={{ asset('images/products/'~ content.product.photopath) }}>
                </td>
                <td>
                    {{ content.quantity }}
                </td>
                <td>
                    <a href="/product/show/{{ content.product.id }}">detail</a>
                </td>
            </tr>
        {% endfor %}
    </table>

    <a href="{{ path('offer_index') }}">back to list</a>

    <a href="{{ path('offer_edit', {'id': offer.id}) }}">edit</a>
{% endblock %}