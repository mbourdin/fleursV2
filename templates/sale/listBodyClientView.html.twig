    <table class="table w-auto table-bordered" id="salesTable">
        <tr>
            <th>id</th>
            <th>onlinepay</th>
            <th>payée</th>
            <th>date</th>
            <th>personne</th>
            <th>validée</th>
            <th>destinataire</th>
            <th>contact</th>
            <th>adresse</th>
            <th>detail/editer</th>
        </tr>
        {% for sale in sales %}
            <tr>
                <td>{{ sale.id }}</td>
                <td>{{ sale.onlinepay? 'Oui' : 'Non' }}</td>
                <td>{{ sale.paid? 'Oui' : 'Non' }}</td>
                <td>{{ sale.date|date }}</td>
                <td>{{ sale.person.id ~"/"~sale.person.firstname ~"/"~sale.person.name }}</td>
                <td>{{ sale.validated? 'Oui' : 'Non' }}</td>
                <td>{{ sale.recipient }}</td>
                <td>{{ sale.contact }}</td>
                <td>{{ sale.address }}</td>
                <td>{%  if not sale.validated %}
                    <a href="/user/sale/edit" class="btn btn-primary">Editer</a>
                    {% else %}
                        <a href="/user/sale/show/{{ sale.id }}">Consulter</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}

    </table>
