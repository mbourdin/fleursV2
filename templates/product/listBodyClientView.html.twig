<div class="container">
    <h1><i class="fas fa-seedling"></i> Fleurs de saison</h1>
    <div class="row">
        {%  for product in products %}
            <div class="card" style="width: 16rem;">
                <img src="{{ asset('images/products/'~ product.photopath) }}" class="rounded mx-auto d-block" alt="..."width="150" height="150">
                <div class="card-body">
                    <h3 class="card-title text-center">{{  product.name }}</h3>
                    <p class="card-text text-center">{{ product.price/100.0 }}€</p>
                    <div class="row justify-content-center">
                        <div class="col-4">
                            <a href="/product/read/{{ product.id }}" class="btn btn-success">détail</a>
                        </div>
                        <div class="col-4">
                            <a href="/panier/addProduct/{{ product.id }}" class="btn btn-warning">Ajout</a>
                        </div>

                    </div>
                </div>
            </div>
        {% endfor%}
    </div>



</div>