{% extends 'base.html.twig' %}
{% block title %}
Produits
   {% endblock %}
{% block body %}
<h1 class="centered" >List des produits</h1>
    <table class="table">
        <tr>
            <th>id</th>
            <th>nom</th>
            <th>description</th>
            <th>prix</th>
            <th>actif</th>
            <th>chemin vers photo</th>
            <th>typeId</th>
            <th></th>
        </tr>
    {%  for product in list %}
        <tr>
            <td> {{   product.id }}</td>
            <td> {{  product.name }}</td>
            <td> {{  product.description }}</td>
            <td> {{ product.price }}</td>
            <td> {{ product.active }}</td>
            <td> {{ product.photopath }}</td>
            <td>{% if product.producttype %}{{ product.producttype.id }}{% endif %}</td>
            <td><a  href="/admin/product/edit/{{   product.id }}"><button>edit</button></a></td>
        </tr>
{% endfor%}
    </table>
{% endblock %}